<Page
    x:Class="Voluteers_App.Choice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Voluteers_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF0085" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="493,105,0,0" TextWrapping="Wrap" Text="Hello!!!" VerticalAlignment="Top" FontSize="48" Foreground="#FFFF00ED" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="202,213,0,0" TextWrapping="Wrap" Text="Please tick the one you prefer." VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" FontSize="22" Width="333" Foreground="#FFFF0085" FontWeight="Bold"/>
        <CheckBox x:Name="chbVolunteer" Content="Volunteers" HorizontalAlignment="Left" Margin="199,281,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FFFF0085" FontWeight="Bold"/>
        <CheckBox x:Name="chbJob" Content="JobSeekers" HorizontalAlignment="Left" Margin="199,358,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FFFF0085" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="btnNChoice" Content="NEXT" HorizontalAlignment="Left" Margin="493,448,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.039,1.643" Height="102" Width="179" FontSize="24"                          Background="#FFB4FF00" Foreground="#FF1100FF" FontWeight="Bold" BorderBrush="#FF06FF00"/>
        <Button x:ConnectionId='2' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="195,462,0,0" VerticalAlignment="Top" Height="86" Width="193"                      />

    </Grid>
</Page>

