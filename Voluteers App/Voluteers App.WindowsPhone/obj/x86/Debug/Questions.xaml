        	<Run Text="?"/>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="145,570,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="975" FontSize="22">
        	<Run Text="How long does it take you to do "/>
        	<Run Text="ba"/>
        	<Run Text="s"/>
        	<Run Text="ic first"/>
        	<Run Text=" aid"/>
        	<Run Text=" level "/>
        	<Run Text="3"/>
        	<Run Text="?"/>
        </TextBlock>
        <Button x:ConnectionId='3' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="132,667,0,0" VerticalAlignment="Top" Height="86" Width="221"                      />
        <Grid HorizontalAlignment="Left" Height="60" Margin="790,115,0,0" VerticalAlignment="Top" Width="460">
            <HyperlinkButton x:ConnectionId='5' x:Name="linkRevert" Content="REVERT" HorizontalAlignment="Left" Margin="185,0,0,0" VerticalAlignment="Top" FontSize="18" Background="#FFF7EFEF"                         />
        </Grid>
        <Grid HorizontalAlignment="Left" Height="95" Margin="75,320,0,0" VerticalAlignment="Top" Width="750">
            <RadioButton x:Name="radYes2" Content="16 hours" HorizontalAlignment="Left" Margin="337,67,0,-1" VerticalAlignment="Top" FontFamily="Global User Interface"/>
            <RadioButton x:Name="radNo2" Content="17 Hours" HorizontalAlignment="Left" Margin="81,67,0,-1" VerticalAlignment="Top"/>
            <RadioButton x:Name="radNo2_Copy" Content="1 hour" HorizontalAlignment="Left" Margin="212,66,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radDontKnow2" Content="Don't know" HorizontalAlignment="Left" Margin="497,66,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="95" Margin="80,190,0,0" VerticalAlignment="Top" Width="315">
            <RadioButton x:Name="radYes1" Content="YES" HorizontalAlignment="Left" Margin="75,65,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radNo1" Content="NO" HorizontalAlignment="Left" Margin="207,61,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="95" Margin="75,560,0,0" VerticalAlignment="Top" Width="750">
            <RadioButton x:Name="radNo4_Cop" Content="16 hours" HorizontalAlignment="Left" Margin="337,67,0,-1" VerticalAlignment="Top" FontFamily="Global User Interface"/>
            <RadioButton x:Name="radYes4" Content="32 Hours" HorizontalAlignment="Left" Margin="202,66,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radNo4" Content="1 hour" HorizontalAlignment="Left" Margin="87,62,0,4" VerticalAlignment="Stretch"/>
            <RadioButton x:Name="radDontKnow4" Content="Don't know" HorizontalAlignment="Left" Margin="497,66,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="95" Margin="70,435,0,0" VerticalAlignment="Top" Width="1110">
            <RadioButton x:Name="radNo3" Content="16 hours" HorizontalAlignment="Left" Margin="212,62,0,0" VerticalAlignment="Top" FontFamily="Global User Interface"/>
            <RadioButton x:Name="radYes3" Content="24 Hours" HorizontalAlignment="Left" Margin="337,62,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radNo3_Copy1" Content="1 hour" HorizontalAlignment="Left" Margin="87,62,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="radDontKnow3" Content="Don't know" HorizontalAlignment="Left" Margin="496,61,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Button x:ConnectionId='4' x:Name="btnnext" Content="NEXT" HorizontalAlignment="Left" Margin="582,667,0,0" VerticalAlignment="Top" Height="86" Width="196"                     />

    </Grid>
