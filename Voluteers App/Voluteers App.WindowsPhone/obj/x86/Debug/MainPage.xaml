<Page
    x:Class="Voluteers_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Voluteers_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RequestedTheme="Dark">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF00A7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="44,124,0,0" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="95,20,-189,0" TextWrapping="Wrap" Text="Sign Up" VerticalAlignment="Top" Foreground="#FFFF00C5" FontSize="48" Width="494" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,169,0,0" TextWrapping="Wrap" Text="Surname:" VerticalAlignment="Top" FontSize="20" Foreground="#FFC802F3" FontWeight="Bold" RenderTransformOrigin="0.328,-1.91"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,208,0,0" TextWrapping="Wrap" Text="Age: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" RenderTransformOrigin="-0.463,0.169" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,248,0,0" TextWrapping="Wrap" Text="Identity Number: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="15,303,0,0" TextWrapping="Wrap" Text="Home Language: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,353,0,0" TextWrapping="Wrap" Text="Contact Numbers: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,409,0,0" TextWrapping="Wrap" Text="Email Address: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="54,564,0,0" VerticalAlignment="Top" Background="#FFD7E82E" BorderBrush="#FFC1E422" Foreground="#FFC802F3" FontSize="22" Width="111"                       FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.604,1.979"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="183,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="178,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Margin="180,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="195,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtHomeLan" HorizontalAlignment="Left" Margin="185,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtNum" HorizontalAlignment="Left" Margin="210,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="178,399,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="25,469,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFE157FF" Width="114"/>
        <TextBlock x:Name="txtPass" HorizontalAlignment="Left" Margin="30,514,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Foreground="#FFE157FF" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtUsernames" HorizontalAlignment="Left" Margin="183,459,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="188,509,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <Button x:ConnectionId='2' x:Name="btnLoginnn" Content="LOGIN" HorizontalAlignment="Left" Margin="221,566,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"                         />
    </Grid>
</Page>

