<Page
    x:Class="Voluteers_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Voluteers_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RequestedTheme="Dark">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF00A7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="115,172,0,0" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="401,72,0,0" TextWrapping="Wrap" Text="Sign Up Yourself" VerticalAlignment="Top" Foreground="#FFFF00C5" FontSize="48" Width="494" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,226,0,0" TextWrapping="Wrap" Text="Surname:" VerticalAlignment="Top" FontSize="20" Foreground="#FFC802F3" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,286,0,0" TextWrapping="Wrap" Text="Age: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" RenderTransformOrigin="-0.463,0.169" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,346,0,0" TextWrapping="Wrap" Text="Identity Number: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,406,0,0" TextWrapping="Wrap" Text="Home Language: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,474,0,0" TextWrapping="Wrap" Text="Contact Numbers: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,548,0,0" TextWrapping="Wrap" Text="Email Address: " VerticalAlignment="Top" Foreground="#FFC802F3" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="192,725,0,-5" VerticalAlignment="Top" Background="#FFD7E82E" BorderBrush="#FFC1E422" Foreground="#FFC802F3" FontSize="22" Width="111"                       FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.604,1.979"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="319,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="319,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Margin="319,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="319,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtHomeLan" HorizontalAlignment="Left" Margin="319,398,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtNum" HorizontalAlignment="Left" Margin="319,466,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="319,540,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="115,612,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFE157FF" Width="114"/>
        <TextBlock x:Name="txtPass" HorizontalAlignment="Left" Margin="115,675,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Foreground="#FFE157FF" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtUsernames" HorizontalAlignment="Left" Margin="319,612,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="319,675,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <Button x:ConnectionId='2' x:Name="btnLoginnn" Content="LOGIN" HorizontalAlignment="Left" Margin="567,717,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"                         />
    </Grid>
</Page>

