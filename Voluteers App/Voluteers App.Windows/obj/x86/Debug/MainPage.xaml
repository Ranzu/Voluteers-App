<Page
    x:Class="Voluteers_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Voluteers_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RequestedTheme="Dark">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF00A7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="369,196,0,0" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="550,72,0,0" TextWrapping="Wrap" Text="Sign Up" VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="72" Width="655" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="360,261,0,0" TextWrapping="Wrap" Text="Surname:" VerticalAlignment="Top" FontSize="20" Foreground="#FF33E1EA" FontWeight="Bold" RenderTransformOrigin="0.328,-1.91"/>
        <TextBlock HorizontalAlignment="Left" Margin="362,326,0,0" TextWrapping="Wrap" Text="Age: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" RenderTransformOrigin="-0.463,0.169" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="355,391,0,0" TextWrapping="Wrap" Text="Identity Number: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="355,445,0,0" TextWrapping="Wrap" Text="Home Language: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="355,500,0,0" TextWrapping="Wrap" Text="Contact Numbers: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,546,0,0" TextWrapping="Wrap" Text="Email Address: " VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="97,212,0,0" VerticalAlignment="Top" Background="#FFD7E82E" BorderBrush="#FF45E422" Foreground="#FFC802F3" FontSize="22" Width="136"                       FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.604,1.979" Grid.Column="1" Height="91"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="575,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="575,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Margin="573,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="575,383,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtHomeLan" HorizontalAlignment="Left" Margin="575,435,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtNum" HorizontalAlignment="Left" Margin="570,493,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="575,543,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="360,610,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FF33E1EA" Width="114"/>
        <TextBlock x:Name="txtPass" HorizontalAlignment="Left" Margin="356,666,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Foreground="#FF33E1EA" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtUsernames" HorizontalAlignment="Left" Margin="578,605,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="575,663,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <Button x:ConnectionId='2' x:Name="btnLoginnn" Content="LOGIN" HorizontalAlignment="Left" Margin="97,420,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"                          Grid.Column="1" Background="#FFCBFF00" BorderBrush="#FF00FF35" Foreground="#FFFF00E1" Height="98" Width="136"/>
    </Grid>
</Page>

